  <div class="container">
  <div class="jumbotron">
    <div class="row">
      <% if @randomhobby != nil %>
      <div class="col-md-6">
        <img class="img-responsive" src="<%= @randomhobby.image %>" height="420" width="420">
      </div>

      <div class="col-md-6">
        <h3>Today's Hobby is <%= @randomhobby.name %></h3>
                <p>
                    <% if @randomhobby.content.length > 100 %>
                         <%= simple_format(@randomhobby.content.byteslice(0,100)) %>...(continue)
                    <% else %>
                         <%= simple_format(@randomhobby.content) %>
                    <% end %>
            <a class="btn btn-primary" href="/hobbies/<%=@randomhobby.id%>">See more<span class="glyphicon glyphicon-chevron-right"></span></a>

        <% else %>
      <div class="col-md-6">
        <img class="img-responsive" src="" height="420" width="420">
      </div>
      <div class="col-md-6">
        <h3>Today's Hobby is not exist</h3>
                <p>
                     Add your hobby in database
        <% end %>
           

      </div>  
  </div>
